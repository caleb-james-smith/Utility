set hls
nnoremap <silent> <Space> :noh<Bar>:echo<CR>

syntax enable
set background=dark
colorscheme delek
hi Search ctermfg=White ctermbg=Blue

" don't use autoindent (ai) because pasting from buffer makes many tabs
" dont use this for same reason: filetype plugin indent on
filetype plugin indent on
set ai
set number
set expandtab
set sw=4 ts=4
set nowrap

autocmd FileType * setlocal formatoptions-=cro
